<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="2dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="74dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher_round"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tx_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="\@wildanarkan"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/img_profile"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tx_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AHMAD WILDAN ARKAN"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/img_profile"
            app:layout_constraintTop_toBottomOf="@+id/tx_user" />

        <ImageView
            android:id="@+id/ic_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/profile"
        android:layout_margin="10dp"
        android:padding="2dp"
        >

        <TextView
            android:id="@+id/tx_gtw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AHMAD WILDAN ARKAN"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/img_profile1"
            app:layout_constraintBottom_toTopOf="@id/tx_user1"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/tx_user1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="\@wildanarkan"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/img_profile1"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/tx_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AHMAD WILDAN ARKAN"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/img_profile1"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tx_user1" />


        <ImageView
            android:id="@id/img_profile1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/tx_gtw1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AHMAD WILDAN ARKAN"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/img_profile1"
            app:layout_constraintBottom_toTopOf="@id/tx_user2"
            android:layout_marginBottom="5dp"

            />

        <TextView
            android:id="@+id/tx_user2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="\@wildanarkan"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_profile1"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/tx_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AHMAD WILDAN ARKAN"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@+id/img_profile1"
            app:layout_constraintTop_toBottomOf="@+id/tx_user1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>